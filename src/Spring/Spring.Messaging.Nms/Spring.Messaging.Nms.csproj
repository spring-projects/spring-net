  <ItemGroup>
    <PackageReference Include="Apache.NMS" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Using Remove="System.Net.Http" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Messaging\Nms\Config\spring-nms-1.2.xsd" />
